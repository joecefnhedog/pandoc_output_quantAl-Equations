import os
import time
def chownpython(path):
    for root, dirs, files in os.walk(path):
        for momo in dirs:
            os.chown(os.path.join(root, momo), 1000, 1000)
        for momo in files:
            os.chown(os.path.join(root, momo), 1000, 1000)

